---
import AppLayout from "@/layout/AppLayout.astro";
import RegisterForm from "@/vue/components/RegisterForm.vue";
const pageTitle: string = "Create a new account";
const pageMeta: {} = [
    {
        name: "description",
        content: "This is the registration page of my awesome website.",
    },
    { name: "keywords", content: "astro, tailwind, login, awesome website" },
    { name: "author", content: "Your Name" },
];
---

<AppLayout title={pageTitle} meta={pageMeta} path="auth/register">
    <div class="h-screen flex justify-center items-center">
        <div class="w-full max-w-md overflow-hidden">
            <RegisterForm client:load />
        </div>
    </div>
</AppLayout>
